@model DataTable
@using System.Data
<h3>@TempData["OrderInsertMsg"]</h3>
<main>
    <h1 class="text-center" style="font-family:'Times New Roman', Times, serif">Order List</h1>

    <!-- Table with hoverable rows -->
    <div class="my-3">
        <a class="btn btn-primary" asp-controller="Order" asp-action="Add_Order">Add Order</a>
        <span>@TempData["errormsg"]</span>

    </div>
    <table class="table table-hover">
        <thead>
            
            <tr>
                <th scope="col">OrderID</th>
                <th scope="col">Order Number</th>
                <th scope="col">Order Date</th>
                <th scope="col">CustomerID</th>
                <th scope="col">Payment Mode</th>
                <th scope="col">Total Amount</th>
                <th scope="col">Shipping Address</th>
                <th scope="col">UserID</th>
                <th scope="col">Actions</th> <!-- Added column for actions -->

            </tr>
        </thead>
        <tbody>
            @foreach (DataRow dataRow in Model.Rows)
            {
                <tr>
                    <td>@dataRow["OrderID"]</td>
                    <td>@dataRow["Ordernumber"]</td>
                    <td>@dataRow["OrderDate"]</td>
                    <td>@dataRow["CustomerID"]</td>
                    <td>@dataRow["PaymentMode"]</td>
                    <td>@dataRow["TotalAmount"]</td>
                    <td>@dataRow["ShippingAddress"]</td>
                    <td>@dataRow["UserID"]</td>
                    <td>
                        <a asp-action="Add_Order" asp-route-OrderID="@dataRow["OrderID"]" class="btn btn-outline-primary btn-sm mb-2 ">Edit</a>

                        <form method="post" asp-controller="Order" asp-action="OrderDelete"  style="display:inline;">
                            <input type="hidden" name="OrderID" value="@dataRow["OrderID"]" />
                            <button onclick="return confirm('Delete?')" type="submit" class="btn btn-outline-danger btn-xs">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!-- End Table with hoverable rows -->
</main>